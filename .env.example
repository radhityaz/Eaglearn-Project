# Eaglearn Flask Application Configuration

# Application Settings
FLASK_ENV=development
FLASK_APP=app.py
DEBUG=False
SECRET_KEY=dev-secret-key-change-in-production

# Server Settings
HOST=0.0.0.0
PORT=5000

# Webcam Settings
WEBCAM_DEVICE=0              # Default camera (0 = built-in)
WEBCAM_RESOLUTION_W=1280
WEBCAM_RESOLUTION_H=720
WEBCAM_FPS=30

# Processing Settings
MEDIAPIPE_DETECTION_CONFIDENCE=0.5
MEDIAPIPE_TRACKING_CONFIDENCE=0.5

# Encryption (if using backend database)
EAGLEARN_ENCRYPTION_KEY=default-insecure-key-change-in-production

# Data Retention Policy (if using database)
RETENTION_DAYS=30
HARD_DELETE_DAYS=60
RETENTION_JOB_HOUR=2
RETENTION_JOB_MINUTE=0

# Logging
LOG_LEVEL=INFO