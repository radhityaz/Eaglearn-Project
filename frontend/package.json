{
  "name": "eaglearn-desktop",
  "version": "0.1.0",
  "description": "Eaglearn - AI-Powered Learning Monitoring System (Desktop Client)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "jest",
    "test:e2e": "playwright test",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "education",
    "ai",
    "monitoring",
    "productivity",
    "offline-first"
  ],
  "author": "Eaglearn Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "msgpack-lite": "^0.1.26"
  },
  "build": {
    "appId": "com.eaglearn.desktop",
    "productName": "Eaglearn",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
